            <Button.Background>
                <ImageBrush ImageSource="/plusko.png"/>
            </Button.Background>
        </Button>
        <TextBlock x:Name="txtTime" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="40" Margin="0,112,0,0" Width="150" Height="57" RenderTransformOrigin="0.5,0.5">
